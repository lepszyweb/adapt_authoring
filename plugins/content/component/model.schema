{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "$ref": "http://localhost/system/trackedObject.schema",
  "properties": {
    "_componentType": {
      "type": "objectid",
      "required": true,
      "ref": "componenttype",
      "editorOnly": true
    },
    "_type": {
      "type": "string",
      "id": "http://jsonschema.net/_type"
    },
    "_component": {
      "type": "string",
      "required": true,
      "default": ""
    },
    "_layout": {
      "type": "string"
    },
    "_classes": {
      "type": "string",
      "default": "",
      "isSetting": true,
      "inputType": "Text",
      "validators": [],
      "title": "Klasy"
    },
    "_isOptional": {
      "type": "boolean",
      "default": false,
      "isSetting": true,
      "inputType": "Checkbox",
      "validators": [],
      "title": "Opcjonalne?",
      "help": "Komponent opcjonalny nie musi być wypełniany przez użytkownika."
    },
    "_isAvailable": {
      "type": "boolean",
      "default": true,
      "isSetting": true,
      "inputType": "Checkbox",
      "validators": [],
      "title": "Dostępny?",
      "help": "Kontroluje czy ten komponent jest dostępny w kursie czy nie."
    },
    "_isHidden": {
      "type": "boolean",
      "default": false,
      "isSetting": true,
      "inputType": "Checkbox",
      "validators": [],
      "title": "Ukryty?",
      "help": "Włączenie tej opcji jest równoznaczne z zastosowaniem CSS 'display:none' do elementu."
    },
    "_isVisible": {
      "type": "boolean",
      "default": true,
      "isSetting": true,
      "inputType": "Checkbox",
      "validators": [],
      "title": "Widoczny?",
      "help": "Wyłączenie tego jest równoznaczne z zastosowaniem CSS 'visibility:hidden' do komponentu."
    },
    "_parentId": {
      "type": "objectid",
      "required": true
    },
    "_courseId": {
      "type": "objectid",
      "required": true,
      "editorOnly": true
    },
    "title": {
      "type": "string",
      "required": true,
      "default": "Tytuł nowego komponentu",
      "inputType": "Text",
      "validators": ["required"],
      "translatable": true
    },
    "displayTitle": {
      "type": "string",
      "required": false,
      "default": "Tytuł nowego komponentu",
      "inputType": "DisplayTitle",
      "validators": [],
      "help": "Podczas przeglądania komponentu - jest to tytuł, który będzie wyświetlany",
      "translatable": true
    },
    "body":{
      "type": "string",
      "default" : "",
      "inputType": "TextArea",
      "validators": [],
      "translatable": true
    },
    "_onScreen": {
      "type": "object",
      "title": "Klasy On-screen",
      "help": "Te ustawienia pozwalają na dołączenie klas do komponentu, gdy znajduje się on w rzutni przeglądarki; jest to pomocne przy uruchamianiu animacji opartych na CSS na komponentach, gdy przewijają się one do widoku.",
      "properties": {
        "_isEnabled": {
          "type": "boolean",
          "default": false,
          "isSetting": true,
          "inputType": "Checkbox",
          "validators": [],
          "title": "Włączone?"
        },
        "_classes": {
          "type": "string",
          "default": "",
          "isSetting": true,
          "required": false,
          "inputType": "Text",
          "validators": [],
          "title": "Klasy",
          "help": "Klasa(y) CSS, którą(e) należy dodać do elementu składowego."
        },
        "_percentInviewVertical": {
          "type": "number",
          "required": false,
          "default": 50,
          "isSetting": true,
          "title": "Procent w zasięgu wzroku",
          "inputType": "Number",
          "validators": ["number"],
          "help": "Określa, jaki procent wysokości elementu musi znajdować się w rzutni, aby klasa(y) CSS mogła zostać dodana."
        }
      }
    },
    "_extensions": {
      "type": "object"
    },
    "themeSettings": {
      "type": "object"
    },
    "properties" : {
      "type": "object"
    },
    "_colorLabel": {
      "type": "string",
      "required": false,
      "editorOnly": true
    }
  }
}
